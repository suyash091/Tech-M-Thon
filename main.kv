#:import Window kivy.core.window.Window
#:set color_shadow [0, 0, 0, .2980392156862745]
#:import MDTextField kivymd.textfields.MDTextField


<KitchenSinkTextFieldRound@MDTextFieldRound>
    size_hint_x: None
    normal_color: color_shadow
    active_color: color_shadow

NavigationLayout:
    MDNavigationDrawer:

        NavigationDrawerSubheader:
            text: "Main Menu"
        NavigationDrawerIconButton:
            icon: 'login-variant'
            text: 'Use Case 2'
            on_release:
                screen_manager.current = "screen2"
        NavigationDrawerIconButton:
            icon: 'login-variant'
            text: 'Use Case 3'
            on_release:
                screen_manager.current = "screen6"
    ScreenManager:
        id: screen_manager
        Screen:
            name: "screen1"
            MDLabel:
                text: "Log In"
                halign: "center"
                size_hint_y: None
            Button:
                text: "Premier Charity Trust"
                on_release:
                    app.root.toggle_nav_drawer()


        Screen:
            name: "screen2"
            MDLabel:
                text: "Scan Your ID Card To Log In"
                halign: "center"
                size_hint_y: None
            MDFloatingActionButton:
                icon: "camera-party-mode"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    app.show_popup("You are login for first time")
                    screen_manager.current = "screen3"

        Screen:
            name: "screen3"
            MDTextField:
                hint_text: "Enter PCT Id"
                required: True
                max_text_length: 10
